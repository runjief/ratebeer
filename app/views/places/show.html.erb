<h1><%= @place.name %></h1>

<p>
  <strong>Status:</strong> <%= @place.status %>
</p>

<p>
  <strong>Address:</strong><br>
  <%= @place.street %><br>
  <%= @place.zip %> <%= @place.city %><br>
  <%= @place.country %>
</p>

<% if @weather %>
  <h3>Current weather in <%= @place.city %></h3>
  <div class="weather-details">
    <% if @weather[:weather_icons] && @weather[:weather_icons].first %>
      <img src="<%= @weather[:weather_icons].first %>" alt="Weather icon">
    <% end %>
    <p>
      <strong>Temperature:</strong> <%= @weather[:temperature] %>Â°C<br>
      <strong>Description:</strong> <%= @weather[:weather_descriptions].first if @weather[:weather_descriptions] %><br>
      <strong>Wind:</strong> <%= @weather[:wind_speed] %> km/h <%= @weather[:wind_dir] %><br>
      <strong>Humidity:</strong> <%= @weather[:humidity] %>%
    </p>
  </div>
<% end %>

<% if @place.phone.present? %>
  <p>
    <strong>Phone:</strong> <%= @place.phone %>
  </p>
<% end %>

<% if @place.overall.present? && @place.overall.to_f > 0 %>
  <p>
    <strong>Rating:</strong> <%= @place.overall %>
  </p>
<% end %>

<p>
  <a href="<%= @place.reviewlink %>" target="_blank">View on Beermapping.com</a>
</p>

<%= link_to "Back to places", places_path %>