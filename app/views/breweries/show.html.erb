<p style="color: green"><%= notice %></p>

<%= render @brewery %>

<div>
  <% if @brewery.ratings.empty? %>
    <p>Brewery has no ratings!</p>
  <% else %>
    <p>Brewery has <%= pluralize(@brewery.ratings.count, 'rating') %>, with an average of <%= round(@brewery.average_rating) %></p>
  <% end %>

  <div class="mt-3">
    <% if current_user %>
      <%= edit_and_destroy_buttons(@brewery) %>
      <%= link_to "change activity", toggle_activity_brewery_path(@brewery.id), data: {turbo_method: "post"}, class: "btn btn-primary" %>
    <% end %>
    <%= link_to "Back to breweries", breweries_path, class: "btn btn-secondary" %>
  </div>
</div>