<h1>Users</h1>

<div id="users">
  <% @users.each do |user| %>
    <div class="mb-2">
      <%= link_to user.username, user %>
      <% if user.account_status? %>
        <span class="badge bg-danger">account frozen</span>
      <% end %>
    </div>
  <% end %>
</div>


<%= link_to "New user", new_user_path, class: "btn btn-primary" %>