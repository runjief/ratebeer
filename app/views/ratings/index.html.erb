<h1>Ratings</h1>

<div class="row">
  <div class="col-md-4">
    <div class="card mb-4">
      <div class="card-header">
        <h3>Best beers</h3>
      </div>
      <div class="card-body">
        <table class="table table-hover">
          <tbody>
            <% @top_beers.each do |beer| %>
              <tr>
                <td><%= link_to beer.name, beer %></td>
                <td><%= beer.average_rating.round(1) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <div class="col-md-4">
    <div class="card mb-4">
      <div class="card-header">
        <h3>Best breweries</h3>
      </div>
      <div class="card-body">
        <table class="table table-hover">
          <tbody>
            <% @top_breweries.each do |brewery| %>
              <tr>
                <td><%= link_to brewery.name, brewery %></td>
                <td><%= brewery.average_rating.round(1) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <div class="col-md-4">
    <div class="card mb-4">
      <div class="card-header">
        <h3>Recent ratings</h3>
      </div>
      <div class="card-body">
        <ul class="list-group">
          <% @recent_ratings.each do |rating| %>
            <li class="list-group-item">
              <%= "#{rating.beer.name} #{rating.score}" %> 
              <%= link_to rating.user.username, rating.user %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>

<div class="row mt-3">
  <div class="col-md-6">
    <div class="card mb-4">
      <div class="card-header">
        <h3>Best styles</h3>
      </div>
      <div class="card-body">
        <table class="table table-hover">
          <tbody>
            <% @top_styles.each do |style| %>
              <tr>
                <td><%= link_to style.name, style %></td>
                <td>
                  <% ratings = style.beers.flat_map(&:ratings) %>
                  <% if ratings.any? %>
                    <%= (ratings.sum(&:score) / ratings.size).round(1) %>
                  <% else %>
                    0
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <div class="col-md-6">
    <div class="card mb-4">
      <div class="card-header">
        <h3>Most active users</h3>
      </div>
      <div class="card-body">
        <table class="table table-hover">
          <tbody>
            <% @most_active_users.each do |user| %>
              <tr>
                <td><%= link_to user.username, user %></td>
                <td><%= user.ratings.count %> ratings</td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<p>Total number of ratings: <%= @ratings.count %></p>

<% if current_user %>
  <%= link_to 'New rating', new_rating_path, class: "btn btn-primary" %>
<% end %>